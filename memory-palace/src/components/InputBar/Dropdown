import React from 'react';

class Dropdown extends React.Component {
    constructor(props){
        this.state = {
            open: false;
            selected: null;
        }

        this.onOpenDropDown = this.onOpenDropDown.bind(this);
        this.onSelectParsedWord = this.onSelectParsedWord.bind(this);
    }

    onOpenDropDown(){
        this.setState({
            opened: !this.state.opened
        });
    }

    onSelectParsedWord(option){
        this.setState({
            selected: option,
            opened: false
        })
    }    

    getParsedWords(){
        return this.props.options.map(e=>{
            <ParsedWord key={o.key} parsedWord={e} onSelect={this.onSelect}/>
        })
    }

    render () {
        return (
            <div className="select" onClick={this.onOpen}>
                <span>
                    {selected}
                </span>
                <ul className={cssClass}>{items}</ul>
        )
    }
